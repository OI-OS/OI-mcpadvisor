{
  "name": "@xiaohui-wang/mcpadvisor",
  "version": "1.0.5",
  "description": "MCP Advisor & Installation - Find the right MCP server for your needs",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcpadvisor": "build/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "discovery",
    "recommendation"
  ],
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@chatmcp/sdk": "^1.0.6",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.9.0",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "fastest-levenshtein": "^1.0.16",
    "meilisearch": "^0.50.0",
    "mysql2": "^3.14.1",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.53.2",
    "sharp": "^0.34.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.53.2",
    "@types/axios": "^0.9.36",
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.0.9"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:jest": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:meilisearch": "vitest run --reporter=verbose --run src/tests/unit/config/meilisearch-config.test.ts src/tests/unit/services/meilisearch-failover.test.ts src/tests/integration/providers/meilisearch-local.test.ts",
    "test:meilisearch:local": "vitest run src/tests/integration/providers/meilisearch-local.test.ts",
    "test:meilisearch:config": "vitest run src/tests/unit/config/meilisearch-config.test.ts",
    "test:meilisearch:failover": "vitest run src/tests/unit/services/meilisearch-failover.test.ts",
    "test:meilisearch:e2e": "./scripts/run-meilisearch-e2e.sh",
    "test:meilisearch:e2e:headed": "./scripts/run-meilisearch-e2e.sh headed",
    "test:meilisearch:e2e:headless": "./scripts/run-meilisearch-e2e.sh headless",
    "test:meilisearch:e2e:debug": "./scripts/run-meilisearch-e2e.sh debug",
    "test:meilisearch:e2e:ui": "./scripts/run-meilisearch-e2e.sh ui",
    "test:meilisearch:all": "pnpm test:meilisearch && pnpm test:meilisearch:e2e",
    "meilisearch:start": "./scripts/start-local-meilisearch.sh",
    "meilisearch:stop": "pkill -f meilisearch 2>/dev/null || docker compose -f docker-compose.meilisearch.yml down 2>/dev/null || echo 'Meilisearch stopped'",
    "meilisearch:logs": "docker compose -f docker-compose.meilisearch.yml logs -f",
    "meilisearch:health": "curl -f http://localhost:7700/health || (echo 'Meilisearch not running' && exit 1)",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "pnpm run lint && pnpm run format:check",
    "deps:update": "pnpm update --latest",
    "deps:check": "pnpm outdated",
    "deps:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "preinstall": "npx only-allow pnpm"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "data"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/istarwyh/mcpadvisor.git"
  },
  "bugs": {
    "url": "https://github.com/istarwyh/mcpadvisor/issues"
  },
  "homepage": "https://github.com/istarwyh/mcpadvisor#readme"
}
