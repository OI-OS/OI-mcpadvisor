  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@chatmcp/sdk": "^1.0.6",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "axios": "^1.9.0",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "meilisearch": "^0.50.0",
    "mysql2": "^3.14.1",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
